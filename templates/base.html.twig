<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}BIENVENUE!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">HotelHouse</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
					<div class="navbar-nav">
						<a class="nav-link active" aria-current="page" href="{{ path('app_projet5') }}">Accueil</a>
						<a class="nav-link" href="{{ path('show') }}">Chambre</a>
                        <a class="nav-link" href="{{ path('home') }}">Restaurant</a>
						<a class="nav-link" href="#">Spa</a>
                        {# <a class="nav-link" href="{{ path('app_projet5') }}">Réservation</a> #}
		                <a class="nav-link" href="#">Avis</a>
                        <a class="nav-link" href="#">l'hotel</a>
		                <a class="nav-link" href="#">Actualités</a>
                        <a class="nav-link" href="#">Contact</a>
					</div>
				</div>	

			</div>



                    <div>
						{% if app.user %}
							<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
							{# <a class="nav-link" href="{{ path('profil') }}">Mon compte</a> #}
						{% else %}
							<a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a>
							<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
						{% endif %}
						{% if is_granted("ROLE_ADMIN") %}
							<a class="nav-link" href="{{ path('app_admin') }}">BACKOFFICE</a>
						{% endif %}
					</div>
				
		</nav>
		<div class="container"> {% block body %}{% endblock %}</div>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js%22%3E</script>

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js%22%3E</script>
		
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js%22%3E</script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js%22%3E</script>
		
		
		
		
		</body>
	</html>
