{% extends "base.html.twig" %}

{% block title %}Admin | Formulaire des chambres
{% endblock %}

{% block body %}

{% for label, msgs in app.flashes %}
		{% for msg in msgs %}
			<div class="alert alert-{{ label }} text-center">
				{{ msg }}
			</div>

		{% endfor %}
	{% endfor %}

	<h1 class="display-4 text-center my-4">

		{% if editMode %}
			BACKOFFICE | Edition d'un chambre
		{% else %}
			BACKOFFICE | Ajouter un chambre
		{% endif %}

	</h1>

	{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

	{# {{ form_row(form.titre) }} #}
	{# {{ form_row(form.descriptionCourte) }}
	{{ form_row(form.descriptionLongue ) }} #}
	{# {{ form_row(form.photo) }} #}
	{# {{ form_row(form.prixJournalier) }} #}

	<button class="btn btn-primary my-2" type="submit">

		{% if editMode %}
			Enregistrer les modifications
		{% else %}
			ajout
		{% endif %}

	</button>

	{{ form_end(form) }}


{% endblock %}
